{
  "requirements": [
    {
      "name": "puppet",
      "version_requirement": "3.x"
    }
  ],
  "name": "kemra102-webhook",
  "version": "0.1.0",
  "summary": "Install simple sinatra webhooks.",
  "author": "Danny Roberts",
  "description": "This will install an basic sinatra webapp which will be listening for JSON post information. These are intended to be generic webhooks that can be used outside of git or r10k.",
  "dependencies": [
    {
      "name": "ploperations/bundler",
      "version_requirement": ">= 1.0.0"
    }
  ],
  "source": "https://github.com/kemra102/puppet-webhook",
  "project_page": "https://github.com/kemra102/puppet-webhook",
  "issues_url": "https://github.com/kemra102/puppet-webhook/issues",
  "tags": ["webhook", "sinatra", "r10k", "github"],
  "license": "Apache-2.0",
  "operatingsystem_support": [
       {
           "operatingsystem":"RedHat",
           "operatingsystemrelease":[ "5.0", "6.0" ]
       },
       {
           "operatingsystem":"OracleLinux",
           "operatingsystemrelease":[ "5.0", "6.0" ]
       },
       {                                            
           "operatingsystem":"Scientific",
           "operatingsystemrelease":[ "5.0", "6.0" ]
       },                                           
       {
           "operatingsystem":"CentOS",
           "operatingsystemrelease":[ "5.0", "6.0" ]
       },
       {
           "operatingsystem":"Debian",
           "operatingsystemrelease":[ "6.0", "7.0" ]
       }
   ]
}
